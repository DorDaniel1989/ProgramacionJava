public static String realizarOperacion(String cadena) {
		int resultado=0;
		int i=0;
		String num1S="asd";
	    String num2S="";
		while(cadena.charAt(i)!='+'&&cadena.charAt(i)!='-'&&cadena.charAt(i)!='*'&&cadena.charAt(i)!='/');{
		 num1S=num1S+(cadena.charAt(i));
		 i++;  }
		 
		
		return num1S ;
	}

}
